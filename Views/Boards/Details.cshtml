@model ProjectManagement.Models.Board

@{
    ViewData["Title"] = "Board Details";
    Layout = "_LayoutProjects";
}

<div class="text-center">
    <h1 class="display-4 ">Details Board</h1>
</div>
<hr />

<ul class="list-group">
    <li class="list-group-item"><p class="fw-bold">Board Title:</p> @Model.Title</li>
    <li class="list-group-item"><p class="fw-bold">Board Description:</p> @Model.BoardDescription </li>
    <li class="list-group-item"><p class="fw-bold">Project Name:</p> @Model.Project.Name</li>
    <li class="list-group-item"><p class="fw-bold">Created Date:</p> @Model.Project.CreatedDate </li>
    <li class="list-group-item"><p class="fw-bold">Last Updated Date:</p> @Model.Project.UpdatedDate</li>
</ul>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BoardId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@model ProjectManagement.Models.Board

@{
    ViewData["Title"] = "Edit Board";
}

<div class="text-center">
    <h1 class="display-4 ">Edit @Model.Title</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BoardId" />
            <input type="hidden" asp-for="ProjectId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Board Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoardDescription" class="control-label">Board Description</label>
                <textarea asp-for="BoardDescription" class="form-control" rows="5"> </textarea>
                <span asp-validation-for="BoardDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a class="btn btn-secondary" asp-action="Index" asp-route-id = "@ViewData["ProjectId"]">Back to Board List</a>
</div>


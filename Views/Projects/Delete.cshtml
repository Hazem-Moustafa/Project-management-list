@model ProjectManagement.Models.ViewModels.ProjectProjectMembers

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 ">Delete Project</h1>
</div>

<h3>Are you sure you want to delete this Project?</h3>
<div>
    <h4>Project</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-10">
          Project Name: @Model.Project.Name;
        </dt>
        <dd class="col-sm-10">
           Manager Name: @Model.Project.Manager.Name
        </dd>
    </dl>

    @foreach (ProjectMember pm in Model.ProjectMembers)
    {
        <div class="col-sm-10">
            @* TODO: There was error when using Member (it returns null) *@
            @pm.Member.Name
        </div>
    }


    <form asp-action="Delete">
        <input type="hidden" asp-for="Project.ProjectId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

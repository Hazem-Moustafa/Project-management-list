@model ProjectManagement.Models.Project

@{
    ViewData["Title"] = string.Format("{0} - Board List",@Model.Name);
    Layout = "_LayoutProjects";
}

    <div class="row">
        @foreach (var item in Model.Boards.OrderByDescending(e => e.UpdatedDate)) //
        {
            <div class="col-sm">

                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text lead">@item.Project.Name</p>
                        <p>@item.BoardDescription</p>
                        <p class="lead text-info">Updated Date: @item.UpdatedDate</p>
                        <p class="lead text-info">Created Date: @item.CreatedDate</p>
                    </div>
                </div>
                
            </div>
        }
        </div>
   

@model List<Work>
@{
}
<div class="container">
    <div class="row">
        @foreach (var card in Model)
        {
            <div class="col-3">
                <h5 class="card-title">@card.Title</h5>
                <ul class="list-group">
                    @if (card.CardItems.Count > 0)
                    {
                        @foreach (var item in card.CardItems.OrderBy(x => x.OrderNumber))
                        {
                            <li class="list-group-item">
                                <span style="background:@item.Color" class="col-3">&nbsp;&nbsp;</span>
                                @item.Title
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">
                            + Add a new
                        </li>
                    }

                </ul>
            </div>
        }
    </div>
</div>

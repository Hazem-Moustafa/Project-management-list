@model ProjectManagement.Models.List

@{ 
    ViewData["Title"] = "Create a List";
}

<h1>Create a List</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.BoardId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Create" class="btn btn-primary my-2" />
                <a asp-route-id="@Model.BoardId" asp-action="Index" class="btn btn-secondary my-2">Back to Dashboard</a>
                <a asp-route-id="@Model.Board.ProjectId"  asp-controller="Boards" asp-action="Index" class="btn btn-info my-2">Back to Boards</a>
            </div>
        </form>
    </div>
</div>



@{
    ViewData["Title"] = "Home Page";
}
<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-8 col-xl-7 col-xxl-6">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-5 fw-bolder text-white mb-2">Project Management</h1>
                    <p class="lead fw-normal text-white-50 mb-4">Manage your projects with your team quickly and easily via using our tools!</p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                        <a class="btn btn-primary btn-lg px-4 me-sm-3" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        <a class="btn btn-outline-light btn-lg px-4" asp-area="Identity" asp-page="/Account/Login">Log In</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" width="600" length="400" src="~/images/project-management.jpg" alt="About Project Management" /></div>
        </div>
    </div>
</header>
<!-- Features section-->
<section class="py-5" id="features">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            <div class="col-lg-4 mb-5 mb-lg-0"><h2 class="fw-bolder mb-0">A better way to manage your project.</h2></div>
            <div class="col-lg-8">
                <div class="row gx-5 row-cols-1 row-cols-md-2">
                    <div class="col mb-5 h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-people-fill"></i></div>
                        <h2 class="h5">Collaboration</h2>
                        <p class="mb-0">Team assignment, solidarity and togetherness... Provide your project management.</p>
                    </div>
                    <div class="col mb-5 h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-save"></i></div>
                        <h2 class="h5">Assignments</h2>
                        <p class="mb-0">Assign tasks to your team and keep track of the work done.</p>
                    </div>
                    <div class="col mb-5 mb-md-0 h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-toggles2"></i></div>
                        <h2 class="h5">Flexibility</h2>
                        <p class="mb-0">Edit tasks or assigned person easily</p>
                    </div>
                    <div class="col h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-door-open"></i></div>
                        <h2 class="h5">Easy to Register</h2>
                        <p class="mb-0">First steps to new road.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

